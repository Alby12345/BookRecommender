@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity
@using BookRecommender.Models.Database
@model BookRecommender.Models.ManageViewModels.GetAccessViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "GetAccess";
}

<h2>Get Access.</h2>
        <section>
            <form asp-controller="Manage" asp-action="GetAccess"  method="post" class="form-horizontal">
                <h4>Use an administrator password to authentificate</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" autocomplete="off"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                </div>
            </form>
        </section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
