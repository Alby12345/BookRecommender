@model BookRecommender.Models.BookDetail

<h1> @Model.Book.GetNameEn()</h1>

<p><strong>Czech name:</strong> @Model.Book.NameCs</p>
<p><strong>Uri:</strong><a href="@Model.Book.Uri">@Model.Book.Uri</a></p>

@if (Model.Authors.Count() > 0){

<h3> Authors: </h3>

<table class="table table-striped">
    <tbody>
        @foreach (var author in Model.Authors){
        <tr>
            <td><a href="/Author/Detail/@author.AuthorId"> @author.GetNameEn() </a></td>
        </tr>
        }
</table>
}

@if (Model.Genres.Count() > 0){

<h3> Genres: </h3>

<table class="table table-striped">
    <tbody>
        @foreach (var genre in Model.Genres){
        <tr>
            <td>@genre.NameEn</td>
        </tr>
        }
</table>
}

@if (Model.Characters.Count() > 0){

<h3> Characters: </h3>

<table class="table table-striped">
    <tbody>
        @foreach (var character in Model.Characters){
        <tr>
            <td>@character.NameEn</td>
        </tr>
        }
</table>
}