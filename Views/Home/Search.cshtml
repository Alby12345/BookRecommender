@model BookRecommender.Models.Search
<div class="container-fluid">
    <div class="col-sm-12">
    <h3>Search:</h3>
    <form action="/Home/Search" method="GET" class="form-inline">
        <input type="text" name="query" class="form-control" value="@Model?.SearchPhrase" />
        <button type="submit" value="Submit" class="btn btn-default">Search</button>
    </form>
    </div>
</div>

@if (Model != null){

<div class="container-fluid">
        <div class="col-sm-12">

    <h5> @Model.TotalBooksFound books found</h5>
    <h5> @Model.TotalAuthorsFound authors found</h5>
        </div>
</div>

<div class="container-fluid">
    <div class="col-sm-6">
        <h3> Books: </h3>
        <table class="table table-striped">
            <tbody>
                @foreach (var bookSearchView in Model.GetBooksToShow()){
                <tr>
                    <td>
                        <div class="row match-my-cols">
                            <div class="col-sm-10 col-xs-12">
                                <div class="container-fluid">
                                    <div class="row">
                                        <a href="/Book/Detail/@bookSearchView.Book.BookId">@bookSearchView.Book.NameEn </a>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4"><p class="text-center">@string.Join(", ", bookSearchView.BookGenres.Select(g => g.NameEn).ToArray())</p></div>
                                        <div class="col-sm-4"><p class="text-center">@string.Join(", ", bookSearchView.BookAuthors.Select(a => a.NameEn).ToArray())</p></div>
                                        <div class="col-sm-4"><p class="text-center">Score</p></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-2 hidden-xs">
                                <img class="img-thumbnail dynamic" data-uri="@bookSearchView.Book.Uri">
                            </div>
                        </div>
                    </td>
                </tr>
                }
        </table>
    </div>



    <div class="col-sm-6">

        <h3> Authors: </h3>

        <table class="table table-striped">
            <tbody>
                @foreach (var author in Model.GetAuthorsToShow()){
                <tr>
                    <td><a href="/Author/Detail/@author.AuthorId"> @author.NameEn </a></td>
                </tr>
                }
        </table>
    </div>
</div>



@if(Model.HighestPage > 1){
<ul class="pager">
    @if(Model.ShowPrevious()){
    <li class="previous"><a href="Search?query=@Model.SearchPhrase&page=@(Model.Page - 1)">Previous</a></li>
    }

    <li>Page @Model.Page/@Model.HighestPage </li>
    @if(Model.ShowNext()){
    <li class="next"><a href="Search?query=@Model.SearchPhrase&page=@(Model.Page + 1)">Next</a></li>
    }
</ul>
}
<script>
$('img.dynamic').each(function(){
    var item = this;
    $.ajax({
            type: "GET",
            url: "/Ajax/DynamicImage?entityUri=" + $(this).data('uri'),
            datatype: "html",
            success: function (data) {
                $(item).attr('src', data);
            }
        })
});
</script>
}